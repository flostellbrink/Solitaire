[*.cs]

# Treat unused imports as errors
dotnet_diagnostic.IDE0005.severity = error

# Prefer target new
dotnet_diagnostic.IDE0090.severity = error

# Multiple where statements in linq are more readable
dotnet_diagnostic.RCS1112.severity = none

# It's okay to throw normal generic exceptions sometimes
dotnet_diagnostic.CA2201.severity = none

# Hard enough to name things without avoiding specific suffixes
dotnet_diagnostic.CA1711.severity = none

# Sealing programs for top level programs is impossible
dotnet_diagnostic.CA1852.severity = none

# Don't require XML docs for everything
dotnet_diagnostic.CS1591.severity = none

# Allow usage of enumerable (TODO: revisit this later)
dotnet_diagnostic.CA1859.severity = none